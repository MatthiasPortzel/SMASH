{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main", "*"],
  "permissions": [
    "path:default",
    "event:default",
    "window:default",
    "app:default",
    "image:default",
    "resources:default",
    "menu:default",
    "tray:default",

    "shell:allow-kill",
    "shell:allow-open",
    "shell:allow-stdin-write",

    {
      "identifier": "shell:allow-execute",
      "items": {
        "args": true,
        "command": "echo",
        "name": "echo",
        "sidecar": false
      }
    }
  ]
}
